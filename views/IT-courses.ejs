<div class="it-container">
    <div class="it-title">
        <h3>IT-Courses</h3>
    </div>
    <div class="container-it">
        <% courses.forEach(course => { %>
          <div class="it" onclick="location.href='/course/<%= course.id %>'">
            <div class="it-image" >
                <img src="/images/<%= course.image %>" alt="">
            </div>
            <button class="it-price"><%= course.price %>$</button>
            <div class="it-text">
                <h3><%= course.title %></h3>
            </div>
            <div class="it-dates">
              <p style="color: #1dcd1a;"><b>Post Date:</b> <%= new Date(course.post_date).toLocaleDateString('en-GB') %></p>
              <p  style="color: red;"><b>Close Date:</b> <%= new Date(course.close_date).toLocaleDateString('en-GB') %></p>
            </div>
        </div>
        <% }) %>
    </div>
